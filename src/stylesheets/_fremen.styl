.freman-wrap {
  position: relative;
  opacity: 0.75;
}

.fremen {
  position: absolute;
  left: -75px;
  top: -40px;;
  width: 100px;
  height: 100px;

  .head {
    position: absolute;
    top: 20px;
    left: 8px;
    z-index: 2;
    width: 25px;
    height: 32px;
    background: #1e1509;
    border-top-left-radius: 40px;
    border-top-right-radius: 40px;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    transform: perspective(100px) rotateX(45deg);
    box-shadow: inset 0 5px 1px 3px #8d5000;
    background: black;

    &:after {
      position: absolute;
      top: 4px;
      left: 5px;
      content: "";
      width: 15px;
      height: 43px;
      border-radius: 7px;
      background: linear-gradient(black, #824c00);
      transform: perspective(50px) rotateX(-70deg);
      opacity: 0.3;
    }
  }

  .body {
    position: absolute;
    top: 30px;
    width: 40px;
    height: 55px;
    background: #1e1509;
    border-top-left-radius: 40px;
    border-top-right-radius: 40px;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    transform: perspective(100px) rotateX(45deg);
    box-shadow: inset 0 6px 1px 3px #8d5000;
    background: black;

    &:after {
      position: absolute;
      top: 20px;
      left: 9px;
      content: "";
      width: 22px;
      height: 21px;
      border-radius: 3px;
      background: linear-gradient(black, #5e2a00);
      transform: perspective(22px) rotateX(-16deg);
    }
    &:before {
      position: absolute;
      top: 38px;
      left: 10px;
      content: "";
      width: 20px;
      height: 22px;
      border-radius: 2px;
      border-bottom-left-radius: 3px;
      border-bottom-right-radius: 3px;
      background: linear-gradient(#5e2a00, black);
      transform: perspective(100px) rotateX(35deg);

    }
  }
  .eyes {
    position: absolute;
    top: 31px;
    left: 3px;
    z-index: 2;
    width: 30px;
    height: 30px;
    transform: scale(0.6)
    // display: none;

    &:before,
    &:after {
      content: "";
      position: absolute;
      left: 50%;
      top: 0;
      margin-left: 6px;
      width: 10px;
      height: 7px;
      border-radius: 100%;
      background: #0060ff;
      background: radial-gradient(#0084ff, black);
      transform: skew(-25deg, 0deg) scale(1, 0.7);
    }
    &:before {
      left: 50%;
      margin-left: -7px;
      transform: skew(25deg, 0deg) scale(1, 0.7);
    }
  }
  .bits {
    position: absolute;
    top: 72px;
    left: 21px;
    width: 1px;
    height: 13px;
    margin-left: -1px;
    background: black;
  }
  .staff {
    position: absolute;
    left: 3px;
    top: 20px;
    width: 1px;
    height: 68px;
    background: black;

    &:before {
      content: "";
      position: absolute;
      left: -1px;
      top: 2px;
      height: 1px;
      background black;
      width: 3px;
    }
  }

  &:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: -30px;
    height: 30px;
    width: 100px;
    background: radial-gradient(ellipse at center, rgba(0,0,0,0.65) 0%,rgba(0,0,0,0.64) 1%,rgba(0,0,0,0) 50%);
  }
}
